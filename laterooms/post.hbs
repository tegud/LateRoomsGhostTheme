{{!< default}}

<header id="post-header" {{#if @blog.cover}}style="background-image: url({{@blog.cover}})"{{/if}}>
	<a href="/" id="blog-title">{{@blog.title}}</a>
	{{> links}}
	
	<div class="cf"></div>
	
	{{#post}}
	
	<div id="title">
		<h1>{{title}}</h1>
		<h2>{{date published_at format="MMMM DD, YYYY"}}</h2>
	</div>
</header>

<div class="container" id="content" role="main">

    <article class="{{post_class}}" id="post-{{id}}">
		{{content}}
    </article>
	
	{{/post}}

</div>
